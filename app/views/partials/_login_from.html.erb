<%= stylesheet_link_tag  :login_form_style %>

<div class = 'login_box' >
  <h3>Log in to Exam Builder </h3>
  <%= form_for user, :url => sessions_path  do |f| %>
    <%= image_tag "/images/user_ico.png" %>
    <%= f.text_field :username %> <br>
    <%= image_tag "/images/lock.png" %>
    <%= f.password_field :password %> <br>
    <%= f.submit 'Log In' %><br>
  <% end %>
  <%= link_to  'Forgot your password?', new_password_reset_path , :id =>   'forgot_password_link' %><br><br>
  don't have an account? Sign up  <%= link_to 'here', new_registration_path %>

</div>
